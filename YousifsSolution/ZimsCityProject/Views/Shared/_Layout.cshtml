@using Microsoft.AspNetCore.Identity

@{
    var isAuthenticated = User.Identity.IsAuthenticated;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/CSS/Shared.css">
    <link rel="stylesheet" href="~/CSS/Navbar.css">
    @RenderSection("CSS", false)

    <script defer src="/JS/Navbar.js"></script>
    @RenderSection("scripts", false)

</head>
<body>
    <navbar class="navbar">
        @if (isAuthenticated)
        {
            <div class="navbar-side" id="navbar-left-side"></div>
        }

        <a class="navbar-ahref" id="header-name" asp-controller="Houses" asp-action="Index">
            <h1 class="Z">Zims City</h1>
            <svg id="house-svg" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512">
                <path d="M570.69,236.27,512,184.44V48a16,16,0,0,0-16-16H432a16,16,0,0,0-16,16V99.67L314.78,10.3C308.5,4.61,296.53,0,288,0s-20.46,4.61-26.74,10.3l-256,226A18.27,18.27,0,0,0,0,248.2a18.64,18.64,0,0,0,4.09,10.71L25.5,282.7a21.14,21.14,0,0,0,12,5.3,21.67,21.67,0,0,0,10.69-4.11l15.9-14V480a32,32,0,0,0,32,32H480a32,32,0,0,0,32-32V269.88l15.91,14A21.94,21.94,0,0,0,538.63,288a20.89,20.89,0,0,0,11.87-5.31l21.41-23.81A21.64,21.64,0,0,0,576,248.19,21,21,0,0,0,570.69,236.27Z" />
            </svg>
        </a>

        @if (isAuthenticated)
        {
            <div class="navbar-side" id="navbar-right-side">
                <a class="navbar-ahref divspan" asp-controller="Houses" asp-action="Index">
                    <span class="navspan">Show All Houses</span>
                </a>
                <a class="navbar-ahref divspan" asp-controller="Houses" asp-action="ConfigureHouse" asp-route-id="">
                    <span class="navspan">Build a House</span>
                </a>
                <a class="navbar-ahref divspan" asp-controller="Identity" asp-action="Signout">
                    <span class="navspan">Signout</span>
                </a>
            </div>
        }
    </navbar>

    <div id="body-container">
        @RenderBody()
    </div>

    <footer id="footer">
        <partial name="_TimeBox" model="DateTime.Now" />
        &copy; Yousif Ali
    </footer>
</body>
</html>
